generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model UserCode {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String
  fullname  String
  city      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  verified  Boolean  @default(false)

  @@index([phone])
  @@index([createdAt])
  @@index([updatedAt])
}
